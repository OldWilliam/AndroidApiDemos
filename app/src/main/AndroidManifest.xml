<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.wx.demo.apidemos">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ServiceActivity" />

        <service
            android:name=".Service.StartedService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".NotificationActivity" />
        <activity android:name=".DrawActivity" />
        <activity android:name=".AnimationActivity" />
        <activity android:name=".ViewAnimationActivity" />
        <activity android:name=".PropertyAnimationActivity" />
        <activity android:name=".ScrollActivity" />
        <activity android:name=".DrawerLayoutActivity"></activity>
    </application>

</manifest>
